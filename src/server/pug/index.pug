          .action2.w-col.w-col-6
            img.action_image(src='images/truck.png')
            p.action_p фіксація холостого проїзду
        .last_block
          img.action_image(src='images/checkmark.png')
          p.action_p чи зареєстрували поточне зважування в обліковій системі
